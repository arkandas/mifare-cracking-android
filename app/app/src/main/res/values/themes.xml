<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Vulkanite" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#12233f</item>
        <item name="colorPrimaryVariant">#12233f</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffa45b</item>
        <item name="colorSecondaryVariant">#ffa45b</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorBackgroundFloating">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- Base application theme No Action Bar. -->
    <style name="Theme.Vulkanite.NoTitleBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#12233f</item>
        <item name="colorPrimaryVariant">#12233f</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#ffa45b</item>
        <item name="colorSecondaryVariant">#ffa45b</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorBackgroundFloating">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Vulkanite.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Vulkanite.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Vulkanite.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>